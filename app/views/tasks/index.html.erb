<h3>Tasks</h3>

<div class="row">
  <%= form_for @task do |f| %>
    <%= f.label "Description" %>
    <%= f.text_field :description %>
    <%= f.label "Quadrant" %>
    <%= f.select :quadrant, (1..4) %>
    <%= f.submit "Create Task" %>
  <% end %>
</div>

<ul>
  <% @tasks.each do |task| %>
    <li><%= task.description %>(Q<%= task.quadrant %>) <%= link_to "Edit", edit_task_path(task), id: "edit_task_#{task.id}" %></li>
  <% end %>
</ul>
